= form_for @content_announcement do |f|
  -if @content_announcement.errors.any?
    #error_explanation
      %h2= "#{pluralize(@content_announcement.errors.count, "error")} prohibited this content_announcement from being saved:"
      %ul
        - @content_announcement.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.cktext_area :content
  .field
    = f.check_box :clickable
    = "Check the box if you want to display the Title in the Menu as a Link"
  .actions
    = f.submit 'Save'
